<!DOCTYPE html>
<html style="overflow: hidden;">
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>
  * {box-sizing: border-box;}

  .img-comp-container {
    position: relative;
    width: 100%;
    height: fit-content;
    height: -moz-max-content;
  }

  .img-comp-img {
    position: absolute;
    width: 100%;
    height: auto;
    overflow:hidden;
  }

  #img-comp-base {
    position: relative;
  }

  #img-comp-base img {
    width: 100%;
  }

  #img-comp-overlay {
    max-width: 100%;
    height: 100%;
    top: 0;
  }

  #overlayImg {
    height: 100%;
    width: auto;
  }

  .img-comp-img img {
    display:block;
    height: auto;
  }

  .img-comp-slider {
    position: absolute;
    z-index:9;
    cursor: ew-resize;
    /*set the appearance of the slider:*/
    width: 30px;
    height: 30px;
    background-color: #26364f;
    opacity: 0.7;
    border-radius: 50%;
  }
</style>
<script>
  var slider, img, clicked = 0, w, h;

  function compareImages(init) {
    img = document.getElementById("img-comp-overlay");
    comtainer = document.getElementById('container');
    w = document.getElementById("img-comp-base").offsetWidth;
    h = document.getElementById("img-comp-base").offsetHeight;
    slider = document.getElementById("slider");

    if (init) {
      /* Center slider position */
      slider.style.top = (h / 2) - (slider.offsetHeight / 2) + "px";
      slider.style.left = (w / 2) - (slider.offsetWidth / 2) + "px";

      /*set the width of the img element to 50%:*/
      img.style.width = (img.offsetWidth / 2) + "px";

      slider.addEventListener("mousedown", slideReady);
      /*and another function when the mouse button is released:*/
      window.addEventListener("mouseup", slideFinish);
      /*and another function when the mouse button leaves element:*/
      comtainer.addEventListener("mouseleave", slideFinish);
      /*or touched (for touch screens:*/
      slider.addEventListener("touchstart", slideReady);
      /*and released (for touch screens:*/
      window.addEventListener("touchend", slideFinish);

    } else { 
      offset = document.getElementById("baseImg").style.width;
        
      slider.style.top = (h / 2) - (slider.offsetHeight / 2) + "px";
      
      // Set slider left pos so it can't go off the image when resizing
      if (img.offsetWidth === w) slider.style.left = w - 25 + "px";
      else slider.style.left = img.offsetWidth - (slider.offsetWidth / 2) + "px";
    }
  }

  function slideReady(e) {
    /*prevent any other actions that may occur when moving over the image:*/
    e.preventDefault();
    /*the slider is now clicked and ready to move:*/
    clicked = 1;
    /*execute a function when the slider is moved:*/
    window.addEventListener("mousemove", slideMove);
    window.addEventListener("touchmove", slideMove);
  }
  function slideFinish() {
      /*the slider is no longer clicked:*/
      clicked = 0;
    }
  function slideMove(e) {
    var pos;
    /*if the slider is no longer clicked, exit this function:*/
    if (clicked == 0) return false;
    /*get the cursor's x position:*/
    pos = getCursorPos(e)
    /*prevent the slider from being positioned outside the image:*/
    if (pos < 10) pos = 10;
    if (pos > w-10) pos = w-10;
    /*execute a function that will resize the overlay image according to the cursor:*/
    slide(pos);
  }
  function getCursorPos(e) {
    var a, x = 0;
    e = (e.changedTouches) ? e.changedTouches[0] : e;
    /*get the x positions of the image:*/
    a = img.getBoundingClientRect();
    /*calculate the cursor's x coordinate, relative to the image:*/
    x = e.pageX - a.left;
    /*consider any page scrolling:*/
    x = x - window.pageXOffset;
    return x;
  }
  function slide(pos) {
    /*resize the image:*/
    img.style.width = pos + "px";
    /*position the slider:*/
    slider.style.left = img.offsetWidth - (slider.offsetWidth / 2) + "px";
  } 
</script>
</head>
<body>
  <div id="container" class="img-comp-container">
    <div id="img-comp-base" class="img-comp-img">
      <img id="baseImg" src="https://s3.ca-central-1.amazonaws.com/ehq-production-canada/83c94f7dae2d09bc01a8384343c021757282c30a/original/1707936513/41ef4db58aeace67ef22a8d8801a6e34_UGS_Dashboard.png?1707936513" width="800" height="534">
    </div>
    <div id="slider" class="img-comp-slider"></div>
    <div id="img-comp-overlay" class="img-comp-img">
      <img id="overlayImg" src="https://s3.ca-central-1.amazonaws.com/ehq-production-canada/dfdac4cbd5b81ccd1c4638c5c2581d9be4a7d771/original/1707936356/ee3042a28c7ce1bdadebaac8fb89df6e_UC_Dashboard.png?1707936356" width="800" height="534">
    </div>
  </div>
  <script>
    // Ajust the overlayImg to always have same width as baseImg
    window.onload = function() {  
      /*Execute a function that will execute an image compare function for each element with the img-comp-overlay element*/
      compareImages(true);

      window.addEventListener('resize', function() {compareImages(false);});
    };
  </script>
</body>
</html>
